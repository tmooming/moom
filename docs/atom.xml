            <title type="text">如何在无限序列中随机抽取元素</title>
            <link rel="alternate" type="text/html" href="https://www.turuwei.com/posts/%E5%A6%82%E4%BD%95%E5%9C%A8%E6%97%A0%E9%99%90%E5%BA%8F%E5%88%97%E4%B8%AD%E9%9A%8F%E6%9C%BA%E6%8A%BD%E5%8F%96%E5%85%83%E7%B4%A0/" />
            <id>https://www.turuwei.com/posts/%E5%A6%82%E4%BD%95%E5%9C%A8%E6%97%A0%E9%99%90%E5%BA%8F%E5%88%97%E4%B8%AD%E9%9A%8F%E6%9C%BA%E6%8A%BD%E5%8F%96%E5%85%83%E7%B4%A0/</id>
